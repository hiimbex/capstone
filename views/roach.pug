extends layout

block content
  <div class="content">
    h1 American Housing Survey Data Visualization
    p Total usable entries: #{total}
    h4 Filters:
    <button onClick="window.location='?citizen=0';" class="float-left submit-button" >Non-citizens</button>
    <button onClick="window.location='?citizen=1';" class="float-left submit-button" >Citizens</button>
    <button onClick="window.location='?rent=1';" class="float-left submit-button" >Rent >$500</button>
    <button onClick="window.location='?rent=2';" class="float-left submit-button" >Rent $500-$1000</button>
    <button onClick="window.location='?rent=3';" class="float-left submit-button" >Rent $1000-$2000</button>
    <button onClick="window.location='?rent=4';" class="float-left submit-button" >Rent >$2000</button>
    <button onClick="window.location='?grad=1';" class="float-left submit-button" >Graduate Degree</button>
    <button onClick="window.location='?grad=2';" class="float-left submit-button" >Bachelors Degree</button>
    <button onClick="window.location='?grad=3';" class="float-left submit-button" >High School Degree or less</button>
    br
    <hr></hr>
    ul
    each val, index in body
      li#data(hidden)= index + ': ' + val
    br
    <script src="https://d3js.org/d3.v3.min.js" charset="utf-8"></script>
    script
      include ../routes/d3roach.js
  <div class="content">
